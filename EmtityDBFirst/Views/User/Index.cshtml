@model List<EmtityDBFirst.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <!--<a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>-->
                    <a href="#" onclick="Testing(@item.UserId)">Delete</a>
                    <!--<input type="button" onclick="Testing(@item.UserId)" value="Delete" />-->
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        function Testing(id) {
             $.ajax({
                url: '@Url.Action("Testing")',
                data: { id: id },
                type: "POST",
                beforeSend: function () {

                },
                success: function (returnData) {
                    location.reload();
                    console.log(returnData);               
                }
            });
        }
    </script>
}