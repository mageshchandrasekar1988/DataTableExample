@model List<EmtityDBFirst.Models.Location>
@{
    //ViewData["Title"] = "DataTable Employee List";
}

<h2>Employee List</h2>
<table id="tblEmployeeList" class="display">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
        </tr>
    </thead>
</table>


@section Scripts{

    <script>
            $(document).ready(function () {
                $('#tblEmployeeList').DataTable({
                    "pageLength": 2,
                    "processing": true,
                    "ServerSide": true,
                    "filter": false,
                    "orderMulti":false,
                    "ajax": {
                        "url": '@Url.Action("GetData")',
                        "type": "POST",
                        "dataType": "json"

                    },
                    "columns": [
                        
                        { "data": "LocationName", sDefaultContent: '' },
                        { "data": "LocationDescription", sDefaultContent: '' }
                    ]


                });





        } );
    </script>
}
